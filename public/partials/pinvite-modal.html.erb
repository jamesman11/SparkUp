<div class="modal-header">
  <button type="button" class="close" ng-click="pInv.closeModal()"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title">Create A Spark Invite</h4>
</div>
<div class="modal-body">
  <div class="lunch-invite div-container">
    <div id="form-lunch-invite" class="div-padding">
      <div class="inviteeInfo">
        <div class="just-joined-profile">
          <div class="img">
            <img ng-src="{{pInv.info.img}}" class="img-circle" />
          </div>
          <div class="profile-info clearfix">
            <p>{{pInv.info.name}}</p>
            <p>{{pInv.info.role}}</p>
          </div>
        </div>
      </div>
      <form class="form-horizontal">
        <div class="form-group form-lunch-group">
          <label class="col-sm-3 control-label">Time</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" ng-model="pInv.info.time" placeholder="12-5pm">
          </div>
        </div>

        <div class="form-group form-lunch-group">
          <label class="col-sm-3 control-label">Location</label>
          <div class="col-sm-6">
            <select ng-model="pInv.info.loc" class="form-control" style="width: 205px;">
              <option ng-repeat="loc in pInv.avlLoc">{{loc}}</option>
            </select>
          </div>
        </div>

        <div class="form-group form-lunch-group">
          <label class="col-sm-3 control-label">Message</label>
          <div class="col-sm-8">
            <textarea type="text" class="form-control" ng-model="pInv.info.message" placeholder="Tell this associate why you want to meet with him/her. (Max 30 words)"></textarea>
          </div>
        </div>

        <div id="send-invite-message">Personal invites will be displayed in public</div>
        <button type="button" class="btn btn-send-invite primary-background-color" ng-click="pInv.submitInvite()">Send Invite</button>
      </form>
    </div>
  </div>
</div>